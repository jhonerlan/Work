        <Button Content="Lenna" HorizontalAlignment="Left" Margin="22,342,0,0" VerticalAlignment="Top" Click="Button_Click" Width="136" Height="33"/>
        <Image x:Name="imgDisplay2" HorizontalAlignment="Left" Height="146" Margin="290,68,0,0" VerticalAlignment="Top" Width="157"/>
        <Button Content="Girasol" HorizontalAlignment="Left" Margin="181,341,0,0" VerticalAlignment="Top" Click="Button_Click_1" Width="136" Height="33"/>
        <Slider x:Name="sldMezcla" 
        HorizontalAlignment="Left" 
        Margin="346,301,0,0" 
        VerticalAlignment="Top" 
        Width="136" 
        Maximum="100" 
        Minimum="0" />

