        <Button x:Name="btnInvertirVertical" Content="Vertical" HorizontalAlignment="Left" Margin="520,345,0,0" VerticalAlignment="Top" Height="34" Width="129" Click="btnInvertirVertical_Click" />
        <Button x:Name="btnInvertirHorizontal" Content="Horizontal" HorizontalAlignment="Left" Margin="517,296,0,0" VerticalAlignment="Top" Height="34" Width="129" Click="btnInvertirHorizontal_Click"/>

    </Grid>
</Window>
